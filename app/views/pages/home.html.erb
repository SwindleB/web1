<style>
body {
    background-color: black;
}
</style>

<div class="row">
    <div class="col-xs-3">
      
        <div class="panel panel-default">
          <div class="panel-image hide-panel-body">  
            <img src="/green3.jpg" class="panel-image-preview">
          </div>
          <div class="panel-footer">
            <div class="row">
                <div class="col-sm-2"><img src="/warriors.jpg" height="100px" width="100px" class="rounded-img home-avatar"></div>
                <div class="col-sm-10"><h4 style="text-align: center; padding-left: 20px;"><%= current_user.username %></h4></div>
                <div class="col-sm-12" style="margin-top: 10px;">
                  <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">POSTS<br>
                    <h6 style="color: #0084B4; font-size: 200%;"><%= current_user.posts.count %></h6>
                  </div>
                  <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">FOLLOWERS<br>
                    <h6 style="color: #0084B4; font-size: 200%;"><%= current_user.followers.count %></h6>
                  </div>
                </div>
            </div>

          </div>
        </div>
        
        <div class="panel panel-default">
          <div class="panel-body trends-color">
             <h5 style="color: grey; font-size: 125%;">Trends</h5>
              <a href="">#Trend #1</a><br>
                <span style="color: grey;">31k Posts</span><br><br>
              <a href="">#Trend #2</a><br>
                <span style="color: grey;">25k Posts</span><br><br>
              <a href="">#Trend #3</a><br>
                <span style="color: grey;">16k Posts</span><br><br>
          </div>
        </div>
    </div>
    <div class="col-xs-6">
        <%= render '/components/posts_form' %><br><br>
        
        <% for @p in @posts %>
        <div class="panel panel-default post-panel">
          <div class="panel-body row">
            
            <div class="col-sm-1">
              <img src="/warriors.jpg" class="rounded-img" height="50px" width="50px"></img>
            </div>
            <div class="col-sm-11">
              <p class="post-title"><span class="post-owner"><a href="/user/<%= User.find(@p.user_id).username %>"><%= User.find(@p.user_id).username %></a></span> <span class="post-creation">- <%= @p.created_at.to_formatted_s(:short) %></span></p>
              <p class="post-content"><%= @p.content %></p>
            </div>
            
            <div class="col-sm-12">
              <p class="post-links">
                <span class="glyphicon glyphicon-thumbs-up g-links" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-thumbs-down g-links" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-share-alt g-links" aria-hidden="true"></span>
                
              </p>
            </div>
            
          </div>
        </div>
        <% end %>
        
        <div class="panel panel-default post-panel">
          <div class="panel-body row">
            <div class="col-sm-12">
             <center><a href="#top"><p class="opacity: .7;"><span class="glyphicon glyphicon-triangle-top" aria-hidden="true"></span></p></a>
              <a href="#top"><p class="opacity: .7;">Back to top <span class="" aria-hidden="true"></span></p></a></center>
            </div>
          </div>
        </div>
    </div>
    <div class="col-xs-3">
        <div class="panel panel-default">
          <div class="panel-body trends-color">
